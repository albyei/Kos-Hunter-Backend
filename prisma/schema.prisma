generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  SOCIETY
}

enum Gender {
  MALE
  FEMALE
  ALL
}

enum BookingStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

model User {
  id              Int      @id @default(autoincrement())
  uuid            String   @unique @default(uuid())
  name            String   @db.VarChar(255)
  email           String   @unique @db.VarChar(255)
  password        String   @db.VarChar(255) // Hashed password 
  profile_picture String?  @db.VarChar(255)
  phone           String?  @db.VarChar(20) // Limited to 20 chars for phone 
  role            Role     @default(SOCIETY)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  reviews         Review[] @relation("UserReviews")
  bookings        Book[]   @relation("UserBookings")
  kos             Kos[]    @relation("OwnerKos")

  @@index([email])
  @@index([role])
}

model Kos {
  id            Int           @id @default(autoincrement())
  uuid          String        @unique @default(uuid())
  ownerId       Int
  name          String        @db.VarChar(255)
  address       String        @db.Text
  description   String?       @db.Text // Added d escription 
  pricePerMonth Int           @default(0)
  gender        Gender
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  owner         User          @relation("OwnerKos", fields: [ownerId], references: [id], onDelete: Cascade)
  images        KosImage[]
  facilities    KosFacility[]
  reviews       Review[]      @relation("KosReviews")
  bookings      Book[]        @relation("KosBookings")

  @@index([ownerId])
  @@index([gender])
}

model KosImage {
  id            Int           @id @default(autoincrement())
  uuid      String   @unique @default(uuid())
  kosId     Int
  image     String   @db.VarChar(255)
  kos       Kos      @relation(fields: [kosId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([kosId])
}

model KosFacility {
  id        Int      @id @default(autoincrement())
  uuid      String   @unique @default("")
  kosId     Int
  facility  String   @db.VarChar(100)
  kos       Kos      @relation(fields: [kosId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([kosId])
}

model Review {
  id        Int      @id @default(autoincrement())
  uuid      String   @unique @default("")
  kosId     Int
  userId    Int
  rating    Int      @default(0)
  comment   String   @db.Text
  kos       Kos      @relation("KosReviews", fields: [kosId], references: [id], onDelete: Cascade)
  user      User     @relation("UserReviews", fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([kosId])
  @@index([userId])
}

model Book {
  id        Int           @id @default(autoincrement())
  uuid      String        @unique @default("")
  kosId     Int
  userId    Int
  startDate DateTime      @db.Date
  endDate   DateTime      @db.Date
  status    BookingStatus @default(PENDING)
  kos       Kos           @relation("KosBookings", fields: [kosId], references: [id], onDelete: Cascade)
  user      User          @relation("UserBookings", fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([kosId])
  @@index([userId])
  @@index([status])
}
